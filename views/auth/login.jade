extends ../layout

block content

    .row
        .col-md-2
        .col-md-8
            .card(style="padding: 5%; margin-top: 2%")
                .row
                    .col-md-12
                        h2.font-title Login
                hr
                br
                .row
                    .col-sm-12.col-md-4
                        .form-group
                            a.btn.btn-block.btn-social.btn-twitter(href="/auth/twitter")
                                span.fa.fa-twitter
                                |  Twitter
                    .col-sm-12.col-md-4
                        .form-group
                            a.btn.btn-block.btn-social.btn-facebook(href="/auth/facebook")
                                span.fa.fa-facebook
                                |  Facebook
                    .col-sm-12.col-md-4
                        .form-group
                            a.btn.btn-block.btn-social.btn-google(href="/auth/google")
                                span.fa.fa-google
                                |  Google

                hr

                br
                form(action="/auth/login", method="POST", style="text-align: center;")
                    .form-group
                        input(type='text', name='username' class='form-control', placeholder='Username',required, autofocus)
                    .form-group
                        input(type='password', name='password' class='form-control', placeholder='Password', required)
                    .form-group
                        button(class='btn btn-lg btn-primary btn-block', type='submit') Sign in

                hr

                .row
                   .col-md-12(style='text-align: center')
                        a(href='/auth/signup').font-text Create a new account
                